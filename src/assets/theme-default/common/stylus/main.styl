/*main*/
#app{
    width 100%
    height 100%
    overflow auto
    background-image url('~@/assets/theme-default/images/common/lg-bg.jpg')
    background-repeat no-repeat
    background-size 100% auto
    background-position top right
}
.copyright{
    background #4e5066
    font-size 14px
    line-height 30px
    color #77798d
    text-align center
    width 100%
    min-width 1200px
}
.index-warpper {
  width: 100%;
  min-width: 1200px;
  min-height: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  position: relative;
}
.tip-warpper {
    margin-top: 20px;
}

.main-warpper {
    // min-width: 1200px;
    min-height: 100%;
    width:100%;
    margin: 0 auto;
    margin-top: 20px;
    padding-bottom: 110px;
}
.l-header {
    padding: 0px;
    min-width:1200px;
    width: 100%;
    height: 120px;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.1);
