border-1px($color) {
    position: relative;

    &:after {
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        border-top: 1px solid $color;
        content: ' ';
    }
}

border-none() {
    border: none;
}

bg-image($url, $size=100%, $size2=100%) {
    background-image: url($url + '.png');
    background-size: $size $size2;
    @media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2) {
        background-image: url($url + '@2x.png');
        background-size: $size $size2;
    }
}

bg-color-brand($op = 1) {
    background: rgba(78, 79, 105, $op);
}
